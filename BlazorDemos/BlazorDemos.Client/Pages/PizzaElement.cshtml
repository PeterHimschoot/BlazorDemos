<div class="pizza-element">
    <div class="row">
        <div class="col-md-4">
            <img class="pizza-image" src="images/@ImageName" />
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="column">
                    @Pizza.Name
                </div>
            </div>
            <div class="row">
                <div class="column">
                    @Pizza.Quantity
                </div>
            </div>
        </div>
    </div>
</div>

@functions {

    public Pizza Pizza { get; set; }

    public string ImageName => $"{Pizza.Name}.png";

}